#!/usr/bin/env bash

function mkd() {
  mkdir -p "$@" && cd "$_" || return
}

function pretty_path() {
  echo "$PATH" | sed "s/:/\n/g"
}

function batdiff() {
  git diff | bat -ldiff
  # git diff --name-only --diff-filter=d | xargs bat --diff
}

