#!/usr/bin/env bash
# -----------------
# Add certain directories to path
# Pretty print path with "pretty_print_path" function
# ---------------------------------------------------

function extend_path() {
  local dir
  declare -a dirs=(
    "$HOME/bin"
    "$HOME/go/bin"
    "$HOME/.fly/bin"
    "$HOME/.npm/bin"
    "$HOME/.cargo/bin"
    "$HOME/.local/bin"
    "$HOME/.dotnet/tools"
  )

  for dir in "${dirs[@]}"; do
    if [ -d "$dir" ] && [[ ! ":$PATH:" == *":$dir:"* ]]; then
      export PATH="$PATH:$dir"
    fi
  done
}

extend_path
unset extend_path
