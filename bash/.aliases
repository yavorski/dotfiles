#!/usr/bin/env bash

# vim/nvim
# alias vim="nvim"

# Easier navigation: .., ..., ...., ....., ~ and -
alias ~="cd ~"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Shortcuts
alias g="git"
alias j="jobs"
alias h="history"
alias d="cd ~/dev"
alias dl="cd ~/Downloads"

# Always use color output for `ls`
alias ls='ls --color=auto'

# List all files colorized with human readable file size
alias l="ls -lhF --color"

# List only directories
alias lsd="ls -l --color -d */"

# Always enable colored `grep` output
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# IP address
alias rip="curl ifconfig.me"

# Sway WM Screenshot
alias screenshot='grim -t png -g "$(slurp)" ~/Screenshots/screenshot-$(date +%d-%m-%Y-%H-%M-%S).png'

# Turn OFF keyboard mic led - ThinkPad T14
alias turn-off-mic-led="light -s sysfs/leds/platform::micmute -S 0"

# Battery status
# alias battery="cat /sys/class/power_supply/BAT0/capacity"
